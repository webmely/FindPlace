<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if @user.errors.any? %>
        <div id="error_explanation">
          <h4>
            <%= pluralize(@user.errors.count, "error") %> prohibited
            this user from being saved:
          </h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <div class="row">
        <div class="input-field col s12">
            <%=f.email_field :email %>
          <label for="email" class="active">Email</label>
        </div>
  </div>

  <div class="row">
        <div class="input-field col s12">
            <%=f.password_field :password %>
            <label for="email" class="active">Password</label>
            <% if @minimum_password_length %>
            <em>password (<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
        </div>
  </div>

  <div class="row">
        <div class="input-field col s12">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <label for="email" class="active">Password confirmation</label>
        </div>
  </div>

  <div class="row">
        <div class="input-field col s12">
          <%=f.text_field :fullname %>
          <label for="email" class="active">Fullname</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%=f.text_field :address %>
          <label for="email" class="active">Address</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%=f.text_field :age %>
          <label for="email" class="active">Age</label>
        </div>
      </div>
      <div class="row">
          <div class="file-field input-field col s12">
            <input class="file-path validate right" type="text"  style="width:85%; border-bottom:#9e9e9e solid 2px;" />
            <div class="btn" style="float:left">
              <span>Avatar</span>
              <%=f.file_field :photo, :id => "user_photo" %>

            </div>
            <img id="image_preview" src="#" alt="your image" style="display:none" />
          </div>
      </div>
      <div class="row" style="margin-top:30px;border-top:#ccc solid 2px; padding-top:20px;">
      <div class="col s12">
              <input type="hidden" name="user[role]" id="user[role]" value="none" />
              <button style="margin-right:20px;" class="btn waves-effect waves-light" type="submit" name="action">Sign Up</button>
              </div>
        </div>
<% end %>


</div>