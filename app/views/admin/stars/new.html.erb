<h2 class="header">New Star
	<a class="waves-effect waves-light btn right " href="/admin/stars">Back</a>
</h2>

<%=form_for  :star, url: admin_stars_path do |f|%>
      <% if @star.errors.any? %>
        <div id="error_explanation">
          <h4>
            <%= pluralize(@star.errors.count, "error") %> prohibited
            this star from being saved:
          </h4>
          <ul>
            <% @star.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
	<div class="row">
        <div class="input-field col s12">
          <%=f.text_field :starcount %>
          <label for="email" class="active">Star</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%=f.text_field :description %>
          <label for="email">Description</label>
        </div>
      </div>

      <button style="margin-right:20px;" class="btn waves-effect waves-light" type="submit" name="action">Create Star</button>
<%end%>