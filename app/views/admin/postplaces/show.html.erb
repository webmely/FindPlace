<h2 class="header">Details Post
	<a class="waves-effect waves-light btn right " href="/admin/postplaces">Back</a>
</h2>
<div class="row">
	<div class="col s6">
		<span class="flow-text-label">Post Title : </span>
		<p class="flow-text"><%=@postplace.title %></p>
	</div>
	<div class="col s6">
		<span class="flow-text-label">Place : </span>
		<p class="flow-text">
			<%place = Place.find(@postplace.place_id)%>
			<%= place.name%>
		</p>
	</div>
	<div class="col s12">
		<span class="flow-text-label">Post Content : </span>
		<p class="flow-text"><%= raw @postplace.content %></p>
	</div>
</div>