<h2 class="header">New Place
	<a class="waves-effect waves-light btn right " href="/admin/places">Back</a>
</h2>

<%=form_for  :place, url: admin_places_path, :html => { :multipart => true }  do |f|%>
<!-- place -->
      <% if @place.errors.any? %>
        <div id="error_explanation">
          <h4>
            <%= pluralize(@place.errors.count, "error") %> prohibited
            this place from being saved:
          </h4>
          <ul>
            <% @place.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%if !@message.nil?%>
          <p><%=@message%></p>
      <%end%>
	<div class="row">
		<div class="input-field col s6">
         		 <%=f.text_field :name %>
          		 <label for="email">Name</label>
        	</div>
        	<div class="input-field col s6">
         		 <%=f.text_field :address %>
          		 <label for="email">Address</label>
        	</div>
        	<div class="input-field col s6">
         		 <%=f.text_area :description , :class=>'materialize-textarea'%>
          		 <label for="email">Description</label>
        	</div>
        	<div class="input-field col s6 type_">
	        	<p class="select_type">Select Type :</p>
	        	<%= collection_select(:place, :type_id, Type.all, :id, :typename, :prompt => "Select Type") %>
        	</div>
        	
	</div>
	<div class="row">

		<div class="input-field col s6 type_">
	        	<p class="select_type">Select Star :</p>
	        	<%= collection_select(:place, :star_id, Star.all, :id, :starcount, :prompt => "Select Star") %>
        	</div>
        	<div class="input-field col s6 type_">
	        	<p class="select_type">Select Provice :</p>
	        	<%= collection_select(:place, :provice_id, Provice.all, :id, :name, :prompt => "Select Provice") %>
        	</div>
	</div>
	<div class="row">
		<h5 class="header">Upload Images</h5	>
		<div class="input-field col s6">
                <p>Ảnh giới thiệu. Nhấn Ctrl để chọn nhiều ảnh </p>
         		<%=f.file_field :photo , multiple: true %>
            </div>
            <div class="input-field col s6">
                <p>Ảnh đại diện</p>
            <%=f.file_field :avatar  %>
            </div>
	</div>
  
      <h5 class="header"></h5>
	<button style="margin-right:20px;" class="btn waves-effect waves-light" type="submit" name="action">Create Place</button>
<!-- end place -->
<%end%>
<div style="margin-bottom:30px;"></div>




